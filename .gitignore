```{r}
#Stwórz kartogram w przekroju województw dla gęstości zaludnienia.
# Pobierz dane ze strony https://pl.wikipedia.org/wiki/Wojew%C3%B3dztwo.

url = 'https://pl.wikipedia.org/wiki/Wojew%C3%B3dztwo'
dane_wiki_html = read_html(url)
dane_wiki = 
  dane_wiki_html %>% 
  html_nodes(css = "table") %>% 
  nth(1) %>% 
  html_table(fill = TRUE)

gestosc_zaludnienia <- dane_wiki %>% rename(JPT_NAZWA_ = Województwo) %>% 
  rename(X1 = `Gęstość zaludnienia[osób/km²]`) %>% 
  select(JPT_NAZWA_, X1)

gestosc_zaludnienia_all <- left_join(wojewodztwa, gestosc_zaludnienia)

tm_shape(gestosc_zaludnienia_all) +
  tm_polygons(col='X1',
              title='Gęstość zaludnienia')

```
